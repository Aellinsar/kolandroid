<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.starfish.kol.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.starfish.kol.android.login.LoginScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.starfish.kol.android.game.GameScreen"
            android:label="@string/title_activity_game_screen"
            android:launchMode="singleTop" >
        </activity>

        <service
            android:name="com.starfish.kol.android.chat.ChatService"
            android:enabled="true"
            android:permission="android.permission.INTERNET" >
        </service>

        <activity
            android:name="com.starfish.kol.android.chat.ChatActivity"
            android:label="@string/title_activity_chat"
            android:parentActivityName="com.starfish.kol.android.game.GameScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.starfish.kol.android.game.GameScreen" />
        </activity>
    </application>

</manifest>
