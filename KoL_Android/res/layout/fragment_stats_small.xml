<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.starfish.kol.android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:background="#fff"
   	android:paddingLeft="5dp"
    tools:context="com.starfish.kol.android.game.fragments.StatsFragment" >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
   	android:paddingTop="3dp"
    android:orientation="vertical" >
        
    <LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
   		android:paddingBottom="1dp" >
	    
	    <ImageView
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:paddingRight="2dp"
	        android:contentDescription="Muscle"
	        android:src="@drawable/musc" />
	    
	    <TextView
	        android:id="@+id/stats_small_muscle"
	        android:layout_width="wrap_content"
	        android:layout_height="20dp"
	        android:text="-" />
	</LinearLayout>
    
    <LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
   		android:paddingBottom="1dp" >
	    
	    <ImageView
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:paddingRight="2dp"
	        android:contentDescription="Mysticality"
	        android:src="@drawable/myst" />
	    
	    <TextView
	        android:id="@+id/stats_small_myst"
	        android:layout_width="wrap_content"
	        android:layout_height="20dp"
	        android:text="-" />
	    
	</LinearLayout>
	 
	 <LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
	    
	    <ImageView
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:paddingRight="2dp"
	        android:contentDescription="Moxie"
	        android:src="@drawable/moxie" />
	    
	    <TextView
	        android:id="@+id/stats_small_moxie"
	        android:layout_width="wrap_content"
	        android:layout_height="20dp"
	        android:text="-" />
	</LinearLayout>
</LinearLayout>

<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="0dp"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="4dp"
    android:layout_weight="1" >
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:paddingTop="2dp"
   		android:paddingBottom="3dp" >
	    
	    <ImageView
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:paddingRight="2dp"
	        android:contentDescription="HP"
	        android:src="@drawable/hp" />
	    
	    <com.starfish.kol.android.util.ProgressBar
	        android:id="@+id/stats_small_hp"
	        android:layout_width="match_parent"
	        android:layout_height="25dp"
	        android:background="#ccc"
	        app:emptyColor="#fff"
	        app:fullColor="#f55"
	        android:singleLine="true"
	        android:gravity="center" />
    </LinearLayout>
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:paddingTop="2dp"
   		android:paddingBottom="3dp" >
	    
	    <ImageView
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:paddingRight="2dp"
	        android:contentDescription="MP"
	        android:src="@drawable/mp" />
	    
	    <com.starfish.kol.android.util.ProgressBar
	        android:id="@+id/stats_small_mp"
	        android:layout_width="match_parent"
	        android:layout_height="25dp"
	        android:background="#ccc"
	        app:emptyColor="#fff"
	        app:fullColor="#77f"
	        android:singleLine="true"
	        android:gravity="center" />
    </LinearLayout>
</LinearLayout>
    
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingTop="4dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >
    
    <LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:paddingTop="2dp"
   		android:paddingBottom="3dp" >
	    
	    <ImageView
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:paddingRight="2dp"
	        android:contentDescription="Adventures"
	        android:src="@drawable/hourglass" />
	    
	    <TextView
	        android:id="@+id/stats_small_adv"
	        android:layout_width="wrap_content"
	        android:layout_height="20dp"
	        android:text="-" />
	</LinearLayout>
	
    <LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:paddingTop="2dp"
   		android:paddingBottom="3dp" >
	    
	    <ImageView
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:paddingRight="2dp"
	        android:contentDescription="Meat"
	        android:src="@drawable/meat" />
	    
	    <TextView
	        android:id="@+id/stats_small_meat"
	        android:layout_width="wrap_content"
	        android:layout_height="20dp"
	        android:text="-" />
	</LinearLayout>
</LinearLayout>


</LinearLayout>
