<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.starfish.kol.android.dialogs.ItemDialog" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        
    <ImageView
        android:id="@+id/dialog_item_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingLeft="3dp"
        android:contentDescription="Image" />

    <TextView
        android:id="@+id/dialog_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="3dp"
        android:textColor="#000"
        android:textSize="25sp"
        android:text="TextView"
        android:layout_weight="1" />
    </LinearLayout>

    <ListView
        android:id="@+id/dialog_item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:choiceMode="singleChoice"
        android:divider="#aaa"
        android:dividerHeight="1dp"
        tools:context="com.starfish.kol.android.game.ItemDialog" />

</LinearLayout>